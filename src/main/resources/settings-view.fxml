<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="dev.cozy.springfxweather.SettingsController" spacing="15" alignment="CENTER" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #122159 11.2%, #95609F 100.2%);">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Settings" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Location:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
        <TextField fx:id="locationField" promptText="Enter city or country" style="-fx-background-color: rgba(255,255,255,0.9);"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#onSave" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 1;"/>
        <Button text="Cancel" onAction="#onCancel" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 1;"/>
    </HBox>
</VBox>
